{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
